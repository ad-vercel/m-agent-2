---
// @ts-ignore
import { Icon } from "astro-icon/components";
import yaml from 'yaml';
import fs from 'fs';


//Read file and convert to JSON
const obj = yaml.parse(fs.readFileSync('./src/features.yaml', 'utf8'));
const features2 = obj.features;
const personas = obj.personas;
const benefits = obj.benefits;

console.log(obj);
