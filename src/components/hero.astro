---
import { Picture } from "astro:assets";
import heroImage from "assets/Marketing-flow-DALL-E.webp"
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 md:block">
    <Picture
      src={heroImage}
      alt="M-Agent marketing flow"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Transform your digital marketing with true AI intelligence
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Streamline and optimize your marketing, from research to execution, with M-Agent

    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#contact"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <!-- <Icon class="text-white w-5 h-5" name="bx:bxl-mail" /> -->
         Free Trial
      </Link>
    </div>
  </div>
</main>
